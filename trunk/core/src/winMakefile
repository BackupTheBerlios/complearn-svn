all: ncd.exe complearn-config.exe anycompress.exe anydecompress.exe

MAINFILES=\
clnexus.c \
cloutput.c \
complearn-compressor-driver.c \
complearn-environment.c \
complearn-external-compressor.c \
complearn-external-file-compressor.c \
complearn-ncd.c \
complearn-rcbzip.c \
complearn-rcbzlib.c \
complearn-rcgzip.c \
complearn-rczlib.c \
complearn-real-compressor-adaptor.c \
complearn-vcart.c \
complearn-vcblocksort.c \
qsufsort.c \
real-compressor.c \
util.c

clean:
	rm -f ncd.exe complearn-config.exe anycompress.exe anydecompress.exe

%.exe: %.c
	gcc -o $@ $(MAINFILES) $< -lz -lbz2 -lgsl -lblas `pkg-config --cflags glib-2.0 --libs` -I . `pkg-config --libs --cflags libxml-2.0` -I complearn -lgmodule-2.0 -lgobject-2.0 -lgthread-2.0 -lglib-2.0 -lgthread-2.0

